{
  "name": "mayoiga",
  "version": "0.1.7",
  "description": "Type safe hook based form library for React",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "/component.js",
    "/component.d.ts",
    "!*.test.js"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "test": "vitest run",
    "prebuild": "npm run clean",
    "build": "tsc",
    "check:type": "tsc --noEmit",
    "check:style": "prettier --check 'src/**/*.{js,ts,jsx,tsx}'",
    "check:lint": "eslint 'src/**/*.{ts,tsx}'",
    "check-all": "npm run check:type && npm run check:style && npm run check:lint && npm run build --noEmit && npm run test",
    "fix-all": "npm run check:style -- --write && npm run check:lint -- --fix",
    "prepublish": "npm run check-all && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/hachibeeDI/mayoiga.git"
  },
  "keywords": [
    "react",
    "react-dom",
    "forms",
    "validation",
    "state"
  ],
  "author": "OGURA Daiki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hachibeeDI/mayoiga/issues"
  },
  "homepage": "https://github.com/hachibeeDI/mayoiga#readme",
  "peerDependencies": {
    "zod": "^3.20.2"
  },
  "dependencies": {
    "nozuchi": "^0.0.6"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.57"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/use-sync-external-store": "^0.0.6",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3",
    "use-sync-external-store": "^1.2.0",
    "vitest": "^1.3.0",
    "zod": "^3.22.4"
  }
}
